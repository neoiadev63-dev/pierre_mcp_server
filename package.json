{
  "name": "pierre-mcp-server",
  "private": true,
  "packageManager": "bun@1.1.0",
  "workspaces": [
    "packages/*",
    "frontend",
    "frontend-mobile"
  ],
  "scripts": {
    "preinstall": "node -e \"if(!process.env.npm_execpath || !process.env.npm_execpath.includes('bun')) { console.error('\\n\\x1b[31mERROR: Use bun, not npm/yarn!\\x1b[0m\\nRun: bun install\\n'); process.exit(1); }\"",
    "typecheck:packages": "bun run typecheck --filter './packages/*'",
    "lint:packages": "bun run lint --filter './packages/*'",
    "test:packages": "bun run test --filter './packages/*'"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "i18next": "^25.8.6",
    "i18next-browser-languagedetector": "^8.2.0",
    "react-i18next": "^16.5.4"
  },
  "overrides": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "@types/react": "~19.1.0"
  }
}
