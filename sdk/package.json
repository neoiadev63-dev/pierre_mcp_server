{
  "name": "pierre-mcp-client",
  "version": "0.2.0",
  "description": "MCP client for Pierre Fitness MCP Server - works with Claude Desktop, ChatGPT, and any MCP host",
  "main": "dist/index.js",
  "packageManager": "bun@1.1.0",
  "bin": {
    "pierre-mcp-client": "./dist/cli.js"
  },
  "scripts": {
    "preinstall": "node -e \"if(!process.env.npm_execpath || !process.env.npm_execpath.includes('bun')) { console.error('\\n\\x1b[31mERROR: Use bun, not npm/yarn!\\x1b[0m\\nRun: bun install\\n'); process.exit(1); }\"",
    "build": "node esbuild.config.mjs",
    "build:tsc": "tsc",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "prepare": "bun run build",
    "generate-types": "node ../scripts/sdk/generate-sdk-types.js",
    "test": "jest --runInBand --forceExit",
    "test:unit": "jest --testPathPattern=test/unit",
    "test:integration": "jest --testPathPattern=test/integration --runInBand --forceExit",
    "test:e2e": "jest --testPathPattern=test/e2e --runInBand --forceExit",
    "test:all": "bun run test:unit && bun run test:integration && bun run test:e2e",
    "test:legacy:sse": "node test/test_sse_claude_desktop.js",
    "test:legacy:e2e": "node test/test_e2e_claude_desktop.js",
    "test:legacy:stdio": "node test/test_claude_desktop.js",
    "test:legacy:oauth": "node test/test_oauth_flow.js",
    "test:legacy:tools": "node test/test_tools_list.js",
    "inspect": "bunx @modelcontextprotocol/inspector node dist/cli.js",
    "inspect:cli": "bunx @modelcontextprotocol/inspector --cli node dist/cli.js"
  },
  "keywords": [
    "mcp",
    "pierre",
    "claude",
    "fitness",
    "oauth",
    "streamable-http",
    "model-context-protocol",
    "strava",
    "garmin",
    "chatgpt"
  ],
  "author": "Pierre Fitness Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Async-IO/pierre_mcp_server.git",
    "directory": "sdk"
  },
  "homepage": "https://github.com/Async-IO/pierre_mcp_server/tree/main/sdk#readme",
  "bugs": {
    "url": "https://github.com/Async-IO/pierre_mcp_server/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@napi-rs/keyring": "^1.1.9",
    "@pierre/mcp-types": "file:../packages/mcp-types",
    "@types/node-fetch": "^2.6.13",
    "ajv": "^8.17.1",
    "commander": "^11.0.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@modelcontextprotocol/inspector": "^0.16.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "jest": "^29.7.0",
    "tsx": "^4.0.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.48.1"
  },
  "files": [
    "dist/",
    "templates/",
    "README.md"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "verbose": true,
    "collectCoverage": false,
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(node-fetch)/)"
    ],
    "transform": {}
  }
}
